@{
    ViewBag.Title = "Client Defined Fields";
}
@section Styles {
    @Styles.Render("~/Content/grid/css")
    @Styles.Render("~/Content/css")
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
        </div>
    </section>
}
<section id="index" style="height: 618px;width:99%">
    <div id='jqxWidget' style="font-size: 12px;height: 90%; font-family: Verdana;">
         <div style="width: 100%; height: 99%; " class="jqx-grid jqx-reset jqx-rc-all jqx-widget jqx-widget-content" role="grid" id="jqxgrid" align="left">
	
        </div>
         <div id="cellbegineditevent"></div>
            <div style="margin-top: 10px;" id="cellendeditevent"></div>
        <div id="popupWindow">
            <div>Client Defined Field</div>
            <div style="overflow: hidden;">
                <form id="userForm" action="./">
                    <table>
                        <tr>
                            <td align="right">Entity:</td>
                            <td align="left">
                                <div id='gridId'></div>
                            </td>
                        </tr>
                        
                        <tr>
                            <td align="right">Client Defined Field:</td>
                            <td align="left">
                                <div id='clientDefinedFieldId'></div>
                            </td>
                        </tr>
                        <tr>
                            <td align="right">SDA Range Name:</td>
                            <td align="left"><input id="sdaRangeName" /></td>
                        </tr>
                        <tr>
                            <td align="right">Column Header:</td>
                            <td align="left"><input id="columnHeader" /></td>
                        </tr>
                        <tr>
                            <td align="right">Format:</td>
                            <td align="left">
                                <div id='format'></div>
                            </td>
                        </tr>
                         <tr>
                            <td colspan="2" style="padding-top: 5px;" align="right"><input type="button" id="Save" value="Save" /><input id="Cancel" type="button" value="Cancel" /></td>
                        </tr>
                    </table>
                </form>
            </div>
       </div>
        <div class="jqx-widget jqx-widget-header" style="width:95%;">
            <input id="addrowbutton" type="button" value="Add" class="button_add" />
            <input id="delrowbutton" type="button" value="Delete" class="button_delete" />
        </div>
    
    </div>
</section>
@section scripts
{
    @Scripts.Render("~/bundles/cdfwidgets")
}
