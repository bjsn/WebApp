@{
    ViewBag.Title = "Opportunity Stages";
}
@section Styles {
    @Styles.Render("~/Content/grid/css")
    @Styles.Render("~/Content/css")
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
        </div>
    </section>
}
<section id="index" style="height: 618px;width:99%">
    <div id='jqxWidget' style="font-size: 12px;height: 90%; font-family: Verdana;">
         <div style="width: 100%; height: 99%; " class="jqx-grid jqx-reset jqx-rc-all jqx-widget jqx-widget-content" role="grid" id="jqxgrid" align="left">
	
        </div>
         <div id="cellbegineditevent"></div>
            <div style="margin-top: 10px;" id="cellendeditevent"></div>
        <div id="popupWindow">
            <div>Opportunity Stages</div>
            <div style="overflow: hidden;">
                <form id="userForm" action="./">
                    <table>
                        <tr>
                            <td align="right">Opportunity Stage:</td>
                            <td align="left"><input id="txtOppStatus" /></td>
                        </tr>
                        <tr>
                            <td align="right">Order:</td>
                            <td align="left"><div style="line-height: 25px;display:inline-block;vertical-align:text-bottom;" id='txtOrder'></div></td>
                        </tr>
                        <tr>
                            <td align="right">Probability:</td>
                            <td align="left"><div style="line-height: 25px;display:inline-block;vertical-align:text-bottom;" id='txtProbability'></div><div style="font-size: 12px;display:inline-block; font-family: Verdana;"> %</div></td>
                        </tr>
                        <tr>
                            <td align="right">Default:</td>
                            <td align="left"><div id='statusDefault'></div></td>
                        </tr>
                        <tr>
                            <td align="right">Stage Type:</td>
                            <td align="left"><div id='stageType'></div></td>
                        </tr>
                         <tr>
                            <td colspan="2" style="padding-top: 5px;" align="right"><input type="button" id="Save" value="Save" /><input id="Cancel" type="button" value="Cancel" /></td>
                        </tr>
                    </table>
                </form>
            </div>
       </div>
        <div class="jqx-widget jqx-widget-header" style="width:95%;">
            <input id="addrowbutton" type="button" value="Add" class="button_add" />
            <input id="delrowbutton" type="button" value="Delete" class="button_delete" />
        </div>
    
    </div>
</section>
@section scripts
{
    @Scripts.Render("~/bundles/oppstatuswidgets")
}
