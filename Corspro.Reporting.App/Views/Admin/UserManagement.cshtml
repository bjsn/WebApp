@{
    ViewBag.Title = "Users";
}
@section Styles {
    @Styles.Render("~/Content/grid/css")
    @Styles.Render("~/Content/css")
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
        </div>
    </section>
}
<section id="index" style="height: 618px; width: 99%">
    <div id='jqxWidget' style="font-size: 12px;height: 90%; font-family: Verdana;">
         <div style="width: 100%; height: 99%; " class="jqx-grid jqx-reset jqx-rc-all jqx-widget jqx-widget-content" role="grid" id="jqxgrid" align="left">
	
        </div>
         <div id="cellbegineditevent"></div>
            <div style="margin-top: 10px;" id="cellendeditevent"></div>
        <div id="popupWindow">
            <div>User</div>
            <div style="overflow: hidden;">
                <form id="userForm" action="./">
                    <table>
                        <tr>
                            <td align="right">Login:</td>
                            <td align="left"><input type="hidden" id="userId" /><input id="loginId" placeholder="someone@mail.com" /></td>
                        </tr>
                        <tr>
                            <td align="right">First Name:</td>
                            <td align="left"><input id="firstName" /></td>
                        </tr>
                        <tr>
                            <td align="right">Last Name:</td>
                            <td align="left"><input id="lastName" /></td>
                        </tr>
                        <tr>
                            <td align="right">Manager:</td>
                            <td align="left">
                                <div id='managerId'></div>
                            </td>
                        </tr>
                        <tr>
                            <td align="right">Admin:</td>
                            <td align="left"><div id='systemAdmin'></div></td>
                        </tr>
                        <tr>
                            <td align="right">Password:</td>
                            <td align="left"><input id="password"/></td>
                        </tr>
                        <tr>
                            <td align="right">Confirm Password:</td>
                            <td align="left"><input id="passwordConfirm"/></td>
                        </tr>
                        <tr>
                            <td colspan="2" style="padding-top: 5px;" align="right"><input type="button" id="Save" value="Save" /><input id="Generate" type="button" value="Generate Password" /><input id="Cancel" type="button" value="Cancel" /></td>
                        </tr>
                    </table>
                </form>
            </div>
       </div>
        <div id="Passpopup">
            <div>Reset Password</div>
            <div style="overflow: hidden;">
                <form id="passForm" action="./">
                    <table>
                        <tr>
                            <td align="right">Password:</td>
                            <td align="left"><input type="hidden" id="passuserId" /><input id="setpassword"/></td>
                        </tr>
                        <tr>
                            <td align="right">Confirm Password:</td>
                            <td align="left"><input id="setpasswordConfirm"/></td>
                        </tr>
                        <tr>
                            <td colspan="2" style="padding-top: 5px;" align="right"><input type="button" id="passSave" value="Save" /><input id="passGenerate" type="button" value="Generate Password" /><input id="passCancel" type="button" value="Cancel" /></td>
                        </tr>
                    </table>
                </form>
            </div>
       </div>
        <div class="jqx-widget jqx-widget-header" style="width:95%;">
            <input id="addrowbutton" type="button" value="Add" class="button_add" />
            <input id="ResetPassword" type="button" value="Reset Password" class="button_reset" />
            <input id="sendEmail" type="button" value="Email Password" class="button_email" />
            <input id="delrowbutton" type="button" value="Delete" class="button_delete" />
        </div>
    
    </div>
</section>
@section scripts
{
    @Scripts.Render("~/bundles/userwidgets")
}
