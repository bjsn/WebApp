@using Corspro.Domain.Dto
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - SalesDoc Architect SalesManager</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <meta http-equiv="Cache-control" content="no-cache">
        <meta http-equiv="Pragma" content="no-cache">
        <meta http-equiv="Expires" content="-1">
        @RenderSection("Styles", required: false)
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <img src="~/Images/logo.jpg" class="logo" alt="Corspro" />
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <div id='jqxWidget'>
                            <div id='jqxMenu' style='visibility: hidden;'>
                                <ul id="menu" >
                                    @{ var user = (UserDto)HttpContext.Current.Session["AuthenticatedUser"]; }
                                    @if (user != null)
                                    {
                                        if (user.Administrator)
                                        {
                                            <li>Administration
                                                <ul style='width: 180px;'>
                                                    <li>@Html.ActionLink("Users", "UserManagement", "Admin")</li>
                                                    <li>@Html.ActionLink("Opportunity Stages", "OppStatusManagement", "Admin")</li>
                                                    <li>@Html.ActionLink("Client Defined Fields", "ClientDefinedFieldMgmt", "Admin")</li>
                                                </ul>
                                            </li>
                                        }
                                        <li>@Html.ActionLink("Opportunities", "OpportunityManagement", "Home")</li>
                                        <li><a href="http://www.corspro.com/salesmanager-support-and-help" target="_blank">Help</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - SalesDoc Architect SalesManager</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
